<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/bg">
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:padding="30sp">
        <ImageView
            android:id="@+id/logo"
            android:layout_marginTop="15sp"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/logo" />
        <TextView
            android:layout_below="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pesanan"
            android:fontFamily="@font/opal"
            android:textColor="@color/colorOrange"
            android:id="@+id/title"
            android:textSize="35sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5sp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="350sp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/title"
            android:layout_marginTop="10sp"
            android:id="@+id/pesanan">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5sp">
                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Black Forest"
                    android:textSize="25sp"
                    android:layout_marginLeft="10sp"
                    android:id="@+id/item_1"
                    android:layout_marginBottom="5sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Red Velvet"
                    android:textSize="25sp"
                    android:layout_below="@+id/item_1"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/item_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cupcake"
                    android:textSize="25sp"
                    android:layout_below="@+id/item_2"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/item_3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choholatte Doughnut"
                    android:textSize="25sp"
                    android:layout_below="@+id/item_3"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/item_4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sugar Doughnut"
                    android:textSize="25sp"
                    android:layout_below="@+id/item_4"
                    android:layout_marginLeft="10sp"
                    android:layout_marginBottom="5sp"
                    android:id="@+id/item_5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/item_1"
                    android:text="x 0"
                    android:id="@+id/jumlah1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/item_2"
                    android:text="x 0"
                    android:id="@+id/jumlah2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/item_3"
                    android:text="x 0"
                    android:id="@+id/jumlah3"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/item_4"
                    android:text="x 0"
                    android:id="@+id/jumlah4"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="25sp"
                    android:layout_marginRight="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@+id/item_5"
                    android:text="x 0"
                    android:id="@+id/jumlah5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jumlah5"
                    android:text="Rp. 0"
                    android:textSize="30sp"
                    android:id="@+id/total"
                    android:layout_alignRight="@+id/jumlah5"
                    android:layout_marginTop="10sp"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/reset"
            android:layout_width="65sp"
            android:layout_height="30sp"
            android:layout_alignBottom="@+id/title"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5sp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/btn_round"
            android:text="Reset"
            android:fontFamily="@font/opal"/>
        <Button
            android:layout_marginTop="15sp"
            android:id="@+id/checkout"
            android:layout_below="@id/pesanan"
            android:textColor="@color/colorAccent"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_round"
            android:text="Checkout" />

    </RelativeLayout>
</ScrollView>
